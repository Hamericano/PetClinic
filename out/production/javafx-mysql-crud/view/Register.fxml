<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.Controller">
  <children>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" styleClass="bodybg" stylesheets="@../css/background.css" VBox.vgrow="ALWAYS">
         <children>
            <PasswordField fx:id="registerPassword" layoutX="227.0" layoutY="145.0" promptText="Enter password" />
            <PasswordField fx:id="registerConfirmation" layoutX="227.0" layoutY="194.0" promptText="Confirm password" />
            <TextField fx:id="registerUsername" layoutX="227.0" layoutY="93.0" promptText="Enter username" />
            <Button layoutX="283.0" layoutY="262.0" mnemonicParsing="false" onAction="#registerUser" text="Register" />
            <Label alignment="CENTER" layoutX="239.0" layoutY="14.0" text="REGISTER" textAlignment="CENTER" textFill="WHITE" underline="true">
               <font>
                  <Font name="System Bold" size="36.0" />
               </font>
            </Label>
            <Label fx:id="txtStatus" layoutX="225.0" layoutY="53.0" prefHeight="40.0" prefWidth="378.0" textFill="RED">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Label>
            <Button layoutX="294.0" layoutY="302.0" mnemonicParsing="false" onAction="#backToMainWindow" prefHeight="31.0" prefWidth="55.0" text="Back" />
         </children>
    </AnchorPane>
  </children>
</VBox>
